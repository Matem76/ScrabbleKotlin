<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_main.xml -->

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Titre de l'application -->



    <!-- Image d'arriÃ¨re-plan -->
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/background2"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:cropToPadding="true"
            android:background="#31D6FF" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.5"/>


    <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scrabble"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent" app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="15dp" app:layout_constraintHorizontal_bias="0.481"/>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center">

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:layout_below="@id/editTextPlayer1"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center">

    </androidx.cardview.widget.CardView>

    <Button
            android:id="@+id/buttonStart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@id/editTextPlayer2"
            android:layout_centerHorizontal="true"
            android:text="Start" tools:layout_editor_absoluteY="341dp" tools:layout_editor_absoluteX="146dp"
            app:layout_constraintStart_toStartOf="@+id/v3"
            app:layout_constraintEnd_toEndOf="@+id/v4"
            app:layout_constraintTop_toTopOf="@+id/l4"
            app:layout_constraintBottom_toBottomOf="@+id/l5"
            android:background="@drawable/rounded_button"
    />
    <EditText
            android:id="@+id/editTextPlayer2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@+id/v1"
            app:layout_constraintEnd_toStartOf="@+id/v2"
            app:layout_constraintTop_toTopOf="@+id/l2"
            app:layout_constraintBottom_toBottomOf="@+id/l3"
            android:hint="Player 2" tools:layout_editor_absoluteY="186dp" tools:layout_editor_absoluteX="59dp"/>
    <EditText
            android:id="@+id/editTextPlayer1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="@+id/v1"
            app:layout_constraintEnd_toStartOf="@+id/v2"
            app:layout_constraintTop_toTopOf="@+id/l1"
            app:layout_constraintBottom_toBottomOf="@+id/l2"
            android:hint="Player 1" tools:layout_editor_absoluteY="100dp" tools:layout_editor_absoluteX="16dp"/>


    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/v1" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.12"
    />
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/v2" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.90"
    />
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/l1" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.12"
    />
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/l2" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.25"
    />
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/l3" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.37"
    />
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/l4"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.6"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/l5"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.66"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/v3" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.37"
    />
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/v4" app:layout_constraintGuide_begin="20dp"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.57"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
